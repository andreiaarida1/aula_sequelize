<% contentFor('body') %>
<div class="container" style="margin-top: 5em;">
    <h3>Cadastros - Adicionar Novo Usuário</h3>
    <div class="row">
        <form  method="POST" action="/produtos_up" class="col-lg-10">
          
            <div class="form-group">
                    <label for="produto">Produto</label>
                <input type="text" name="produto" id="produto" class="form-control"  value="<%- data.produto %>">                   
                <input type="hidden" name="id" id="id" class="form-control"  value="<%- data.id %>">                   
            </div>
                    
            <div class="form-group">
                <label for="marca"  >Marca</label>
                <select  name="marca" id="marca"  class="form-control" >
                
                    <option value="<%- data.marca %>"><%- data.m.marca %></option>

                
                </select>
            </div>
            
            <div class="form-group">
                    <label for="preco" >Preço</label>
                    <input type="number" step="any" name="preco" id="preco"  class="form-control" value="<%- data.preco %>" />
            </div>
        
          
              
       
            <div class="form-group">
                <a href="/produtos" id="cancelar" class="btn btn-raised btn-danger">Cancelar</a>
                <button type="submit" class="btn btn-raised btn-success">Salvar</button>
                
            </div>
        </form>
    </div>
</div>
<script>

    const marca=document.getElementById('marca');
    let data=fetch('/marcas/select',{
                    method:'GET',
                    headers:{
                        'Content-Type':'application/json;character=utf-8'
                    },
                }).then(response=>{
                    return response.json();
                }).then(data=>{
                    
                    
                    data.map((f)=>{
                        let opt=document.createElement('option');
                        opt.value=f.id;
                        opt.text=f.marca;
                    
                    
                    
        
                        marca.appendChild(opt);
                        
                    })
                })
</script>